@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
	<div class="row py-3 d-flex align-items-center">
		<div class="col-6">
			<h2 class="text-primary m-0">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-page="/Categories/Create">
				New Category
				<i class="bi bi-plus-circle"></i>
			</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display Order
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Categories.OrderBy(item => item.DisplayOrder))
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.DisplayOrder</td>
				<td>
					<div class="btn-group d-flex" role="group">
						<a asp-page="/Categories/Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
							Edit <i class="bi bi-pencil-square"></i>
						</a>
						<a asp-page="/Categories/Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
							Delete <i class="bi bi-trash-fill"></i>
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>