@model ShoppingCartVM

<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="row align-items-center">
					<h4 class="col-6 m-0">
						<i class="fa fa-shopping-cart me-2"></i>
						Shopping Cart
					</h4>
					<div class="col-6 text-end">
						<a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm">Continue Shopping</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach (var item in Model.ShoppingCartList)
				{
					<div class="row">
						<div class="d-none d-lg-block col-lg-1 text-center py-2">
							<img src="@item.Product.ImageUrl" class="rounded" width="100%" />
						</div>
						<div class="col-12 col-lg-6 pt-md-3">
							<h5><strong>@item.Product.Title</strong></h5>
							<p><small>@Html.Raw(item.Product.Description)</small></p>
						</div>
						<div class="col-12  col-lg-5 text-center row">
							<div class="col-4 text-md-right pt-4">
								<h6>
									<strong>
										<span class="text-success">@item.Price.ToString("c")</span>
										<span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
									</strong>
								</h6>
							</div>
							<div class="col-6 col-sm-4 col-lg-6 pt-2">
								<div class="w-75 btn-group" role="group">
									<a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-primary">
										<i class="bi bi-plus-square"></i>
									</a> &nbsp;
									<a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-warning">
										<i class="bi bi-dash-square"></i>
									</a>
								</div>

							</div>
							<div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
								<a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger">
									<i class="bi bi-trash-fill"></i>
								</a>
							</div>
						</div>
					</div>
					<hr />
				}
				<div class="row justify-content-around">
					<div class="col-sm-12 col-lg-2 col-md-6 d-flex justify-content-between align-items-center">
						<h6 class="text-info fw-semibold text-uppercase m-0">Total:</h6>
						<h4 class="text-info fw-bolder m-0">@Model.OrderTotal.ToString("c")</h4>
					</div>
				</div>

			</div>

			<div class="card-footer">
				<div class="row justify-content-around">
					<div class="col-sm-12 col-lg-4 col-md-6">
						<a asp-action="Summary" class="btn btn-outline-dark form-control">Summary</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>