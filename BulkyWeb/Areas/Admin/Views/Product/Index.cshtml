@model IEnumerable<Product>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-primary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Product List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row py-3 d-flex align-items-center">
			<div class="text-end">
				<a class="btn btn-primary" asp-action="Create">
					New Product
					<i class="bi bi-plus-circle"></i>
				</a>
			</div>
		</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						Title
					</th>
					<th>
						Description
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.OrderBy(item => item.Title))
				{
					<tr>
						<td>@item.Title</td>
						<td>@item.Description</td>
						<td>
							<div class="btn-group d-flex" role="group">
								<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
									Edit <i class="bi bi-pencil-square"></i>
								</a>
								<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
									Delete <i class="bi bi-trash-fill"></i>
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>